@model Nop.Plugin.Shipping.BoxNow.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))

<form asp-controller="BoxNow" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <p>Box Now Settings</p>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="Code_OverrideForStore" asp-input="Code" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="Code" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Code" />
                        <span asp-validation-for="Code"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="DisplayName_OverrideForStore" asp-input="DisplayName" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="DisplayName" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DisplayName" />
                        <span asp-validation-for="DisplayName"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="Description_OverrideForStore" asp-input="Description" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="Description" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Description" />
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="ClientID_OverrideForStore" asp-input="ClientID" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="ClientID" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ClientID" />
                        <span asp-validation-for="ClientID"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="ClientSecret_OverrideForStore" asp-input="ClientSecret" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="ClientSecret" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ClientSecret"/>
                        <span asp-validation-for="ClientSecret"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="PartnerID_OverrideForStore" asp-input="PartnerID" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="PartnerID" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PartnerID" />
                        <span asp-validation-for="PartnerID"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="IsStaging_OverrideForStore" asp-input="IsStaging" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="IsStaging" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="IsStaging" />
                        <span asp-validation-for="IsStaging"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="FixedRate_OverrideForStore" asp-input="FixedRate" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="FixedRate" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="FixedRate" />
                        <span asp-validation-for="FixedRate"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>